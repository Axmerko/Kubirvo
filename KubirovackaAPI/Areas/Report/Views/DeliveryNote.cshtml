@model KubirovackaAPI.Areas.Report.Models.DTO.DeliveryNoteDTO
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html" lang="cs">
<head>
    <style>
        table, tr, td, th, tbody, thead, tfoot {
            page-break-inside: avoid !important;
        }
        table {
            width: 100%;
            border-spacing: 0;
            border-collapse: collapse;
            margin: 0;
            padding: 0;
            table-layout: fixed;
        }
        .row {
            padding: 5px;
        }
        .item {
            display: inline-block;
            vertical-align: top;
            width: 30%
        }
        .item.text {
            font-weight: bold;
            width: 70%;
            padding-left: 5px;
        }
        .row.multi .item {
            display: block;
            width: 100%;
            margin-bottom: 3px;
        }
        th {
            text-align: left;
        }
        td {
            border: 1px solid black;
            vertical-align: top;
        }
        .cell {
            padding: 3px 5px;
        }
        .cell.number {
            text-align: right;
        }
        td.header {
            border: none;
        }
        td.priceData {
            text-align: right;
        }
        .noBorder td {
            border: none;
        }
        td.header .cell {
            font-weight: bold;
            text-align: center;
        }
    </style>
    <title>Dodací list</title>
</head>
<body>
<div style="font-weight: bold; font-size: 25px; width: 50%; display: inline-block">Dodací list</div>
<div style="font-weight: bold; font-size: 20px;width: 40%; display: inline-block; text-align: right">Číslo dokladu: @Model.DocNumber</div>
<table style="margin-top: 10px;">
    <tr>
        <td style="width: 50%">
            <div class="row">
                <div class="item">Dodavatel:</div>
                <div class="item text">
                    @Model.Supplier.Name
                    @if (Model.Supplier.StreetAndNumber?.Length > 0)
                    {
                        <br>
                        @Model.Supplier.StreetAndNumber
                    }
                    @if (Model.Supplier.City?.Length > 0)
                    {
                        <br>
                        @Model.Supplier.City
                        if (Model.Supplier.ZipCode?.Length > 0)
                        {
                            <text>, </text>
                            @Model.Supplier.ZipCode
                        }
                    }
                    @if (Model.Supplier.Country?.Length > 0)
                    {
                        <br>
                        @Model.Supplier.Country
                    }
                </div>
            </div>
            <div class="row">
                <div class="item">IČ DPH:</div>
                <div class="item text">@Model.Supplier.VatNum</div>
            </div>
        </td>
        <td>
            <div class="row">
                <div class="item">Odběratel:</div>
                <div class="item text">
                    @Model.Customer.Name
                    @if (Model.Customer.StreetAndNumber?.Length > 0)
                    {
                        <br>
                        @Model.Customer.StreetAndNumber
                    }
                    @if (Model.Customer.City?.Length > 0)
                    {
                        <br>
                        @Model.Customer.City
                        if (Model.Customer.ZipCode?.Length > 0)
                        {
                            <text>, </text>
                            @Model.Customer.ZipCode
                        }
                    }
                    @if (Model.Customer.Country?.Length > 0)
                    {
                        <br>
                        @Model.Customer.Country
                    }
                </div>
            </div>
            <div class="row">
                <div class="item">IČ DPH:</div>
                <div class="item text">@Model.Customer.VatNum</div>
            </div>
        </td>
    </tr>
    <tr>
        <td style="width: 50%">
            <table class="noBorder">
                <tr>
                    <th>Datum vystavení:</th>
                    <td>@(Model.DateOfIssue != null ? Model.DateOfIssue.GetValueOrDefault().ToLocalTime().Date.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <th>Datum dodání:</th>
                    <td>@(Model.DateOfDelivery != null ? Model.DateOfDelivery.GetValueOrDefault().ToLocalTime().Date.ToShortDateString() : "")</td>
                </tr>
                <tr>
                    <th>Bankovní účet:</th>
                    <td>@Model.BankAccount</td>
                </tr>
                <tr>
                    <th>Variabilní symbol:</th>
                    <td>@Model.VariableSymbol</td>
                </tr>
                <tr>
                    <th>Objednávka:</th>
                    <td>@Model.Order</td>
                </tr>
                <tr>
                    <th>Pracovník:</th>
                    <td>@Model.Worker</td>
                </tr>
            </table>
        </td>
        <td style="width: 50%">
            <table class="noBorder">
                <tr>
                    <th>Mezisoučet:</th>
                    <td class="priceData">@Model.PriceSubtotal.ToString("c2")</td>
                </tr>
                <tr>
                    <th>Daň:</th>
                    <td class="priceData">@Model.PriceTax.ToString("c2")</td>
                </tr>
                <tr>
                    <th>Přeprava a Dodání:</th>
                    <td class="priceData">@Model.PriceShipping.ToString("c2")</td>
                </tr>
                <tr>
                    <th>Součet:</th>
                    <td class="priceData">@Model.PriceTotal.ToString("c2")</td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <table class="noBorder">
                <tr>
                    <th style="width: 20%">Přeprava a Dodání:</th>
                    <td>@Model.ShippingAndDelivery</td>
                </tr>
                <tr>
                    <th style="width: 20%">Podmínky:</th>
                    <td>@Model.Condition</td>
                </tr>
                <tr>
                    <th style="width: 20%">Poznámky:</th>
                    <td>@Model.Note</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
<table style="margin-top: 15px;">
    <tr>
        <td class="header" style="width:15%">
            <div class="cell">#</div>
        </td>
        <td class="header" style="width:21%">
            <div class="cell">Dřevina</div>
        </td>
        <td class="header" style="width:21%">
            <div class="cell">Sortiment</div>
        </td>
        <td class="header" style="width:21%">
            <div class="cell">Průměr uprostřed (cm)</div>
        </td>
        <td class="header" style="width:21%">
            <div class="cell"> Délka (m)</div>
        </td>     
        <td class="header" style="width:21%">
            <div class="cell"> JPRL</div>
        </td>
        <td class="header" style="width:21%">
            <div class="cell"> Oddének</div>
        </td>
        <td class="header" style="width:10%;">
            <div class="cell">Objem m³</div>
        </td>
    </tr>
    @foreach (var item in Model.WoodLogs)
    {
        <tr>
            <td style="width:5%">
                <div class="cell number">@item.Number</div>
            </td>
            <td style="width:21%">
                <div class="cell">@item.Wood</div>
            </td>
            <td style="width:21%">
                <div class="cell">@item.Sortiment</div>
            </td>
            <td style="width:21%">
                <div class="cell number">@item.Diameter</div>
            </td>
            <td style="width:21%">
                <div class="cell number">@item.Length</div>
            </td>         
            <td style="width:21%">
                <div class="cell number">@item.Fsdu</div>
            </td>
            <td style="width:21%">
                <div class="cell number">@(item.IsRhizome ? "X" : "")</div>
            </td>
            <td style="width:10%;">
                <div class="cell number">@item.Volume.ToString("F2")</div>
            </td>
        </tr>
    }
    <tr>
        <td colspan="7">Celkem:</td>
        <td><div class="cell number">@Model.TotalVolume.ToString("F2")</div></td>
    </tr>
    <tr>
        <td colspan="7">m³/ks:</td>
        <td colspan="2"><div class="cell number">@Model.M3PerLog.ToString("F2")</div></td>
    </tr>
</table>
<table style="margin-top: 15px">
    <tr>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">Odběratel:</div>
                <div class="item text" style="width: auto">@Model.OtherCustomer</div>
            </div>
        </td>
        <td>
            <div class="row">
                <div class="item" style="width: auto">Jméno:</div>
                <div class="item text" style="width: auto">@Model.OtherCustomerName</div>
            </div>
        </td>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">Datum:</div>
                <div class="item text" style="width: auto">
                    @(Model.OtherCustomerDate.HasValue ? Model.OtherCustomerDate.GetValueOrDefault().Date.ToShortDateString() : "")
                </div>
            </div>
        </td>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">Čas:</div>
                <div class="item text" style="width: auto">@Model.OtherCustomerTime</div>
            </div>
        </td>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">Podpis:</div>
                <div class="item text" style="width: auto"></div>
            </div>
        </td>
    </tr>
    <tr>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">Dodavatel:</div>
                <div class="item text" style="width: auto">@Model.OtherSupplier</div>
            </div>
        </td>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">Kontakt:</div>
                <div class="item text" style="width: auto">@Model.OtherSupplierContact</div>
            </div>
        </td>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">E-mail:</div>
                <div class="item text" style="width: auto">@Model.OtherSupplierEmail</div>
            </div>
        </td>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto">Telefón:</div>
                <div class="item text" style="width: auto">@Model.OtherSupplierPhone</div>
            </div>
        </td>
        <td style="width:20%;">
            <div class="row">
                <div class="item" style="width: auto"></div>
                <div class="item text" style="width: auto"></div>
            </div>
        </td>
    </tr>
</table>
</body>
</html>